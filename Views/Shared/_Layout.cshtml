<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link type="image/x-icon" rel="shortcut icon" href="~/favicon0.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewNFTGel</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../css/MainStyle.css" />
    <link rel="stylesheet" href="../css/hamburger.css" />
</head>
<body>
    <header>
        <div class="hamburger-menu">
            <input id="menu__toggle" type="checkbox" />
            <label class="menu__btn" for="menu__toggle">
                <span></span>
            </label>

            <ul class="menu__box">
                <li><a id="index" class="menu__item" href="/Main/Index">Коллекции</a></li>
                <li><a id="pers_area" class="menu__item" href="/Main/PersonArea">Личный кабинет</a></li>
                <li><a id="chat" class="menu__item" href="/Main/Contact">Обратная связь</a></li>
            </ul>
        </div>
        <div style="display: flex; align-items: center;">
            <span style="color: #FFFFFF; font-size: 18px; font-family: 'Consolas';">Баланс: <a id="balance"></a></span>
            <img src="~/coin.png" style="width: 20px; height: 20px;">
        </div>
    </header>
    <script src="~/js/start.js"></script>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - NewNFTGel - <a asp-area="" asp-controller="Main" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
